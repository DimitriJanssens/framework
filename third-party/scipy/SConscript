Import('env')

tarball = env.File('scipy-0.19.0.tar.gz')

unpack_dir = env.Dir('.')

pythonpath_scipy = unpack_dir.Dir('../scipy/lib/python2.7/site-packages')
pythonpath_numpy = unpack_dir.Dir('../numpy/lib/python2.7/site-packages')

bdist = env['THIRD_PARTY_DIR'].File('scipy-0.19.0.linux-%s.tar.gz' %(env.GetOption('target')))

build_host = 'cd %s && F90=$FC.name F77=$FC.name AR=$AR.name AS=$AS.name CC=$CC.name CXX=$CXX.name LDSHARED=$CC.name LDFLAGS=\'-pthread -shared\' RANLIB=$RANLIB.name PYTHONPATH=%s:%s python2.7 setup.py --no-user-cfg build --compiler=unix --fcompiler=gnu95 install --prefix=. bdist_dumb --plat-name=linux-%s --relative' %(unpack_dir.path, pythonpath_scipy, pythonpath_numpy, env.GetOption('target'))
build_axo = 'scons numpy --target=host && cd %s && F90=$FC.name F77=$FC.name AR=$AR.name AS=$AS.name CC=$CC.name CXX=$CXX.name BASECFLAGS=\'-I$TOOLCHAINS_DIR.abspath/toolchain-axo-gcc-4.9.2-arm/include/python2.7\'  LDSHARED=$CC.name LDFLAGS=\'-pthread -shared\' RANLIB=$RANLIB.name PYTHONPATH=%s:%s /usr/bin/python2.7 setup.py --no-user-cfg build --compiler=unix --fcompiler=gnu95 build_ext --library-dirs=\'../numpy/lib/python2.7/site-packages/numpy-1.12.1-py2.7-linux-i686.egg/numpy/core/lib\' install --prefix=. bdist_dumb --plat-name=linux-%s --relative' %(unpack_dir.path, pythonpath_scipy, pythonpath_numpy.abspath.replace('/do/axotec/', '/do/host/'), env.GetOption('target'))

build_target = ''
if env.GetOption('target') == 'axotec':
  build_target = build_axo
else:
  build_target = build_host

cmd = env.Command([ unpack_dir.File('setup.py'), bdist ], [ tarball, env.Alias('numpy') ], [
  '$TAR -xf $SOURCE -C %s --strip-components=1' %(unpack_dir.path),
  Mkdir(pythonpath_scipy),
  build_target,
  'cp %s $THIRD_PARTY_DIR.path' %(unpack_dir.Dir('dist').File(bdist.name).path),
])

env.Alias('scipy', cmd)
