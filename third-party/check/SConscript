Import('env')

tarball = env.File('check-0.10.0.tar.gz')

unpack_dir = env.Dir('.')

include_dir = env['THIRD_PARTY_INC_DIR'].Dir("check")

target_incs = [
	include_dir.File('check.h'),
	include_dir.File('check_stdint.h'),
]

target_libs = [
	env['THIRD_PARTY_LIB_DIR'].File('libcheck.so'),
]


cmd = env.Command([ target_incs, target_libs ], [ tarball, env['CC'] ], [
  Mkdir(unpack_dir),
  '$TAR -xvf $SOURCE -C %s --strip-components=1' %(unpack_dir.path),
	'cd %s ; ./configure --host=%s --prefix=%s --disable-static --includedir=%s --libdir=%s && make install' %(unpack_dir.abspath, env.File(env['CC']).name.strip('-gcc'), unpack_dir.abspath, include_dir.abspath, env['THIRD_PARTY_LIB_DIR']),
	])

# check will get unpacked in my do directory. Scons needs to know about this.
env.SideEffect(unpack_dir.path , cmd)

env.Alias('check', cmd)
